<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="215dp"
    android:background="@color/black_wash">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cover_imageView"
        android:layout_width="132dp"
        android:layout_height="132dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ImageCircle" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:text="Die Antwoord"
        app:layout_constraintStart_toStartOf="@+id/cover_imageView"
        app:layout_constraintTop_toBottomOf="@+id/cover_imageView" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/town_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:text="Будапешт"
        app:layout_constraintStart_toStartOf="@+id/name_textView"
        app:layout_constraintTop_toBottomOf="@+id/name_textView" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icon_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/town_textView"
        app:layout_constraintTop_toBottomOf="@+id/town_textView"
        app:srcCompat="@drawable/airplane_icon" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/price_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginStart="5dp"
        android:textSize="14dp"
        android:text="от 22 264 ₽"
        app:layout_constraintBottom_toBottomOf="@+id/icon_imageView"
        app:layout_constraintStart_toEndOf="@+id/icon_imageView"
        app:layout_constraintTop_toTopOf="@+id/icon_imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>
