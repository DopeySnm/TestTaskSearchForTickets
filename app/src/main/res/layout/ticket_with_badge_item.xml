<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/badge_name_textView"
        android:layout_width="126dp"
        android:layout_height="20dp"
        android:elevation="2dp"
        android:text="Самый удобный"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/badge_background"
        app:layout_constraintBottom_toTopOf="@+id/ticket_item_container"
        app:layout_constraintStart_toStartOf="@+id/ticket_item_container"
        app:layout_constraintTop_toTopOf="@+id/ticket_item_container" />

    <include
        android:id="@+id/ticket_item_container"
        layout="@layout/ticket_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ticket_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
